<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIProject.Views.GridLayout"
             Title="GridLayout">
    <Grid 
        RowDefinitions="2*,0.5*,0.5*,0.5*,*" 
        ColumnDefinitions="*,*" 
        ColumnSpacing="1"  
        RowSpacing="1">
        <BoxView 
            Grid.Row="0" 
            Grid.Column="0" 
            BackgroundColor="LightGreen"/>
        <BoxView 
            Grid.Row="0" 
            Grid.Column="1" 
            BackgroundColor="DarkGreen"/>
        <BoxView 
            Grid.Row="1" 
            Grid.RowSpan="3" 
            BackgroundColor="DarkGreen"/>
        <BoxView 
            Grid.Row="1" 
            Grid.Column="1" 
            BackgroundColor="LightGreen"/>
        <BoxView 
            Grid.Row="2" 
            Grid.Column="1" 
            BackgroundColor="DarkGreen"/>
        <BoxView 
            Grid.Row="3" 
            Grid.Column="1" 
            BackgroundColor="LightGreen"/>
        <BoxView 
            Grid.Row="4" 
            Grid.ColumnSpan="2" 
            BackgroundColor="LightGreen"/>
    </Grid>
</ContentPage>